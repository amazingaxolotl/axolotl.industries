{
  "name": "axolotl.industries",
  "version": "0.0.0",
  "description": "https://axolotl.industries",
  "main": "config.toml",
  "repository": "https://github.com/bitantics/axolotl.industries",
  "author": "Kevin Sullivan <kevin@bitantics.com>",
  "license": "MIT",
  "scripts": {
    "deploy": "firebase deploy",
    "deploy:login": "firebase login",
    "build": "npm run build:style && npm run build:html",
    "build:html": "hugo",
    "build:style": "postcss ./style/axolotl.industries.css --config postcss.config.js --dir ./static/style --no-map",
    "start": "npm run watch:style & hugo serve --buildDrafts --bind 0.0.0.0",
    "postcss": "postcss",
    "watch:style": "npm run build:style -- --watch"
  },
  "dependencies": {
    "normalize.css": "^7.0.0"
  },
  "devDependencies": {
    "cssnano": "^3.10.0",
    "firebase-tools": "^3.9.1",
    "postcss": "^6.0.1",
    "postcss-cli": "^4.0.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0"
  }
}
